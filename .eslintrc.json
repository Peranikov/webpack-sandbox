{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": "off",
    "semi": [
      "warn",
      "never"
    ],
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
